# ==================== APPLICATION ====================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# ==================== DATABASE (PostgreSQL) ====================
DATABASE_URL=postgres://localhost:5432/thumbnail-gen
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30
DATABASE_MAX_LIFETIME=0
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_SSL=false

# ==================== CACHE (Redis) ====================
CACHE_URL=redis://localhost:6379
CACHE_CONNECTION_TIMEOUT=10000
CACHE_IDLE_TIMEOUT=0
CACHE_AUTO_RECONNECT=true
CACHE_MAX_RETRIES=10
CACHE_ENABLE_OFFLINE_QUEUE=true
CACHE_ENABLE_AUTO_PIPELINING=true
CACHE_SSL=false

# ==================== STORAGE (S3/MinIO) ====================
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=thumbnails

# ==================== SECURITY ====================
JWT_SECRET=change-me-in-production
PASSWORD_SALT=change-me-in-production
