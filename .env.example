# Application Environment
NODE_ENV=development
LOG_LEVEL=info
PORT=3005

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/dbname
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30
DATABASE_MAX_LIFETIME=0
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_SSL=false

# Cache Configuration (Redis)
CACHE_URL=redis://localhost:6379
CACHE_CONNECTION_TIMEOUT=10000
CACHE_IDLE_TIMEOUT=30000
CACHE_AUTO_RECONNECT=true
CACHE_MAX_RETRIES=10
CACHE_ENABLE_OFFLINE_QUEUE=true
CACHE_ENABLE_AUTO_PIPELINING=true
CACHE_SSL=false

# Storage Configuration (MinIO/S3)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY_ID=minioadmin
STORAGE_SECRET_ACCESS_KEY=minioadmin
STORAGE_BUCKET_NAME=bucket

# CORS Configuration
CORS_ORIGIN=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Request-ID,Accept-Language
CORS_EXPOSE_HEADERS=Content-Type,Authorization,X-Request-ID,Accept-Language
CORS_MAX_AGE=86400
CORS_CREDENTIALS=true
