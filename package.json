{
  "name": "thumbnail-generator",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch --env-file=.env src/index.ts",
    "start": "bun --env-file=.env src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "build:minify": "bun build src/index.ts --outfile ./dist/index.js --target bun --minify",
    "build:binary": "bun build --compile --minify src/index.ts --outfile thumbnails-generator --target bun",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "pg": "^8.18.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.18.2",
    "@hono/zod-validator": "^0.4.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.6.16",
    "pino": "^10.3.0",
    "zod": "^3.24.1"
  }
}
